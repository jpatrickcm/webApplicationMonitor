@model WebApplication.Models.MenuAnulaciones


@{
    ViewBag.Title = "Monitor";
}

<h2>ANULACIONES</h2>

<div class="container">
    @using (Html.BeginForm("Index", "MenuAnulaciones", FormMethod.Post, new { id = "form-anulaciones-id" }))
    {
        <div class="row">
            <div class="form-inline">
                <div class="form-group">
                    @Html.LabelFor(model => model.fechaInicio, htmlAttributes: new { @class = "control-labele" })
                    @Html.EditorFor(model => model.fechaInicio, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.fechaInicio, "", new { @class = "text-danger" })
                    @Html.LabelFor(model => model.fechaFinal, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.fechaFinal, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.fechaFinal, "", new { @class = "text-danger" })
                    @Html.LabelFor(model => model.empresa, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.empresa, (SelectList)ViewBag.listadoEmpresa, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="form-group">
                <input class="btn btn-info col-md-offset-10" type="submit" name="buscar" value="Buscar" />
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <a class="btn btn-default col-md-offset-10" href="menu">Volver</a>
            </div>
        </div>

        <div class="row">

            <ul class="nav nav-tabs nav-justified">
                <li class="active"><a data-toggle="tab" href="#facturas">Cpe_facturas</a></li>
                <li><a data-toggle="tab" href="#boletas">Cpe_boletas</a></li>
                <li><a data-toggle="tab" href="#retenciones-percepciones">Cpe_rete_pers</a></li>
            </ul>

            <div class="tab-content">
                <div id="facturas" class="tab-pane fade in active">
                    <div class="table-responsive">
                        <table id="table-factura-id" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>RUC</th>
                                    <th>COMPROBANTE</th>
                                    <th>SERIE</th>
                                    <th>CORRELATIVO</th>
                                    <th>FECHA EMISION</th>
                                    <th>FECHA CARGA</th>
                                    <th>ESTADO</th>
                                    <th>CODIGO EMPRESA</th>
                                    <th>MENSAJE</th>
                                </tr>
                            </thead>
                            <tbody>

                                @if (Model != null)
                                {
                                    if (Model.listaCpe != null)
                                    {
                                        foreach (WebApplication.Models.Cpe objCpe in Model.listaCpe)
                                        {
                                            <tr>
                                                <td>@objCpe.RUC.ToString()</td>
                                                <td>@objCpe.Comprobante.ToString()</td>
                                                <td>@objCpe.Serie.ToString()</td>
                                                <td>@objCpe.Correlativo.ToString()</td>
                                                <td>@objCpe.FechaEmision.ToString()</td>
                                                <td>@objCpe.FechaCarga.ToString()</td>
                                                <td>@objCpe.Estado.ToString()</td>
                                                <td>@objCpe.CodigoEmpresa.ToString()</td>
                                                <td>@objCpe.Mensaje.ToString()</td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div id="boletas" class="tab-pane fade">
                    <div class="table-responsive">
                        <table id="table-boletas-id" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>RUC</th>
                                    <th>COMPROBANTE</th>
                                    <th>SERIE</th>
                                    <th>CORRELATIVO</th>
                                    <th>FECHA EMISION</th>
                                    <th>FECHA CARGA</th>
                                    <th>ESTADO</th>
                                    <th>CODIGO EMPRESA</th>
                                    <th>MENSAJE</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    if (Model.listaCpe != null)
                                    {
                                        foreach (WebApplication.Models.Cpe objCpe in Model.listaCpeBoletas)
                                        {
                                            <tr>
                                                <td>@objCpe.RUC.ToString()</td>
                                                <td>@objCpe.Comprobante.ToString()</td>
                                                <td>@objCpe.Serie.ToString()</td>
                                                <td>@objCpe.Correlativo.ToString()</td>
                                                <td>@objCpe.FechaEmision.ToString()</td>
                                                <td>@objCpe.FechaCarga.ToString()</td>
                                                <td>@objCpe.Estado.ToString()</td>
                                                <td>@objCpe.CodigoEmpresa.ToString()</td>
                                                <td>@objCpe.Mensaje.ToString()</td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div id="retenciones-percepciones" class="tab-pane fade">
                    <div class="table-responsive">
                        <table id="table-retenciones-percepciones-id" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>RUC</th>
                                    <th>COMPROBANTE</th>
                                    <th>SERIE</th>
                                    <th>CORRELATIVO</th>
                                    <th>FECHA EMISION</th>
                                    <th>FECHA CARGA</th>
                                    <th>ESTADO</th>
                                    <th>CODIGO EMPRESA</th>
                                    <th>MENSAJE</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    if (Model.listaCpe != null)
                                    {
                                        foreach (WebApplication.Models.Cpe objCpe in Model.listaCpeRetePerce)
                                        {
                                            <tr>
                                                <td>@objCpe.RUC.ToString()</td>
                                                <td>@objCpe.Comprobante.ToString()</td>
                                                <td>@objCpe.Serie.ToString()</td>
                                                <td>@objCpe.Correlativo.ToString()</td>
                                                <td>@objCpe.FechaEmision.ToString()</td>
                                                <td>@objCpe.FechaCarga.ToString()</td>
                                                <td>@objCpe.Estado.ToString()</td>
                                                <td>@objCpe.CodigoEmpresa.ToString()</td>
                                                <td>@objCpe.Mensaje.ToString()</td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

        <div class="row" style="display:none">
            <div class="btn-group btn-group-justified">
                <div class="btn-group">
                    <button type="button" class="btn btn-primary">Cpe_facturas</button>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-primary">Cpe_boletas</button>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-primary">Cpe_rete_pers</button>
                </div>
            </div>
        </div>

        <div class="row" style="display:none">

            <div class="table-responsive ">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>RUC</th>
                            <th>COMPROBANTE</th>
                            <th>SERIE</th>
                            <th>CORRELATIVO</th>
                            <th>FECHA EMISION</th>
                            <th>FECHA CARGA</th>
                            <th>ESTADO</th>
                            <th>CODIGO EMPRESA</th>
                            <th>MENSAJE</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>20510675411</td>
                            <td>COMPROBANTE</td>
                            <td>F001</td>
                            <td>CORRELATIVO</td>
                            <td>FECHA EMISION</td>
                            <td>FECHA CARGA</td>
                            <td>ESTADO</td>
                            <td>CODIGO EMPRESA</td>
                            <td>MENSAJE</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">

        </div>

    }
</div>