@model WebApplication.Models.Login

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-12">
                            <span>Login</span>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { id = "form-login-id" }))
                            {
                                <div class="form-group">
                                    @Html.EditorFor(model => model.username,
                                    new { htmlAttributes = new { @class = "form-control", placeholder = "Usuario", tabindex = "1" } })
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.password,
                                    new { htmlAttributes = new { @class = "form-control", placeholder = "Password", tabindex = "2", type="password" } })
                                </div>
                                <div class="form-group text-center">
                                    <input type="checkbox" tabindex="3" class="" name="remember" id="remember">
                                    <label for="remember"> Remember Me</label>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-info" value="Sign In">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-2">&nbsp;</div>
                                    <label id="mensaje" class="label label-warning col-md-8" style="font-size:medium">@Html.DisplayFor(model => model.mensaje)</label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>